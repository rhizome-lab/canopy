#!/usr/bin/env bash
# Pre-commit hook: type check and lint
#
# Install: cp .githooks/pre-commit .git/hooks/pre-commit && chmod +x .git/hooks/pre-commit

set -e

echo "Running type check..."
bun run typecheck 2>/dev/null || {
    echo "  Warning: type check failed or not configured"
    exit 1
}

echo "Running lint..."
bun run lint 2>/dev/null || {
    echo "  Warning: lint failed or not configured"
    exit 1
}

echo "Pre-commit checks passed!"
